                "S3Bucket": {
                    "Fn::Sub": "${AWS::StackName}-bucket"
                },
                "S3Key": "Get_Car.zip"
            },
            "Handler": "Get_Car.get_car",
            "Runtime": "python3.6",
            "MemorySize": 1024,
            "Role": {"Fn::GetAtt": ["IAMLambdaServiceRole", "Arn"]},
        "Timeout" : 60
